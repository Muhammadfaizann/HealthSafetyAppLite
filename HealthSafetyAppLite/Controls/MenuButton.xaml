<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:svg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             x:Class="HealthSafetyAppLite.Controls.MenuButton"
       Padding="0" BackgroundColor="{StaticResource HsBackground}"
        HeightRequest="80" CornerRadius="10">
    <StackLayout>
        <svg:SvgCachedImage
            x:Name="img"
            HorizontalOptions="Center"
            Aspect="AspectFit"
        DownsampleToViewSize="True"
        HeightRequest="27"
        VerticalOptions="End"
        WidthRequest="27"
        Margin="0,10,0,0"    />
        <Label x:Name="txt"
              TextColor="#000000"
               FontAttributes="Bold"
               FontSize="12"
               HorizontalTextAlignment="Center"
               Margin="0"/>
    </StackLayout>
</Frame>